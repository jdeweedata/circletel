'use client';

import { useCallback, useState, useEffect } from 'react';
import { GoogleMap, Marker, useJsApiLoader } from '@react-google-maps/api';
import { Button } from '@/components/ui/button';
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';
import { MapPin, Loader2, Navigation, X } from 'lucide-react';
import { toast } from 'sonner';

const mapContainerStyle = {
  width: '100%',
  height: '500px',
  borderRadius: '0.5rem'
};

const defaultCenter = {
  lat: -25.7461,
  lng: 28.1881 // Pretoria, South Africa
};

const mapOptions = {
  disableDefaultUI: false,
  zoomControl: true,
  streetViewControl: false,
  mapTypeControl: false,
  fullscreenControl: true,
  gestureHandling: 'greedy',
  mapTypeId: 'roadmap' as google.maps.MapTypeId,
};

interface InteractiveMapModalProps {
  isOpen: boolean;
  onClose: () => void;
  onLocationSelect: (data: {
    address: string;
    latitude: number;
    longitude: number;
    province?: string;
    suburb?: string;
    town?: string;
    postalCode?: string;
  }) => void;
  initialLocation?: {
    lat: number;
    lng: number;
  };
  title?: string;
  description?: string;
}

export function InteractiveMapModal({
  isOpen,
  onClose,
  onLocationSelect,
  initialLocation,
  title = "Select Your Location",
  description = "Drag the PIN to your exact location or click on the map to place it"
}: InteractiveMapModalProps) {
  const [markerPosition, setMarkerPosition] = useState<google.maps.LatLngLiteral | null>(
    initialLocation || null
  );
  const [isGeocodingAddress, setIsGeocodingAddress] = useState(false);
  const [selectedAddress, setSelectedAddress] = useState<string>('');
  const [mapInstance, setMapInstance] = useState<google.maps.Map | null>(null);

  const { isLoaded, loadError } = useJsApiLoader({
    id: 'google-map-script',
    googleMapsApiKey: process.env.NEXT_PUBLIC_GOOGLE_MAPS_API_KEY || '',
    libraries: ['places', 'geocoding']
  });

  // Update marker position when initial location changes
  useEffect(() => {
    if (initialLocation) {
      setMarkerPosition(initialLocation);
      if (mapInstance) {
        mapInstance.panTo(initialLocation);
        mapInstance.setZoom(15);
      }
    }
  }, [initialLocation, mapInstance]);

  // Reverse geocode to get address from coordinates
  const reverseGeocode = useCallback(async (lat: number, lng: number) => {
    setIsGeocodingAddress(true);

    try {
      const geocoder = new google.maps.Geocoder();
      const response = await geocoder.geocode({ location: { lat, lng } });

      if (response.results[0]) {
        const result = response.results[0];
        const address = result.formatted_address;
        setSelectedAddress(address);

        console.log('[InteractiveMapModal] Reverse geocoded address:', address);

        // Parse address components
        const addressComponents = result.address_components;
        let province = '';
        let suburb = '';
        let locality = '';
        let postalCode = '';

        addressComponents?.forEach((component) => {
          const types = component.types;
          if (types.includes('sublocality_level_1') || types.includes('sublocality')) {
            suburb = component.long_name;
          } else if (types.includes('locality')) {
            locality = component.long_name;
          } else if (types.includes('administrative_area_level_1')) {
            province = component.long_name;
          } else if (types.includes('postal_code')) {
            postalCode = component.long_name;
          }
        });

        toast.success('Location selected');

        return {
          address,
          latitude: lat,
          longitude: lng,
          province,
          suburb: suburb || locality,
          town: locality,
          postalCode
        };
      } else {
        toast.error('Could not determine address for this location');
        return null;
      }
    } catch (error) {
      console.error('[InteractiveMapModal] Geocoding error:', error);
      toast.error('Failed to determine address. Please try again.');
      return null;
    } finally {
      setIsGeocodingAddress(false);
    }
  }, []);

  // Handle map click to place marker
  const handleMapClick = useCallback(async (e: google.maps.MapMouseEvent) => {
    if (e.latLng) {
      const lat = e.latLng.lat();
      const lng = e.latLng.lng();

      console.log('[InteractiveMapModal] Map clicked at:', { lat, lng });
      setMarkerPosition({ lat, lng });

      // Reverse geocode immediately when placing marker
      await reverseGeocode(lat, lng);
    }
  }, [reverseGeocode]);

  // Handle marker drag
  const handleMarkerDragEnd = useCallback(async (e: google.maps.MapMouseEvent) => {
    if (e.latLng) {
      const lat = e.latLng.lat();
      const lng = e.latLng.lng();

      console.log('[InteractiveMapModal] Marker dragged to:', { lat, lng });
      setMarkerPosition({ lat, lng });

      // Reverse geocode after dragging
      await reverseGeocode(lat, lng);
    }
  }, [reverseGeocode]);

  // Use current location
  const handleUseCurrentLocation = useCallback(() => {
    if (navigator.geolocation) {
      toast.info('Getting your location...');

      navigator.geolocation.getCurrentPosition(
        async (position) => {
          const lat = position.coords.latitude;
          const lng = position.coords.longitude;

          console.log('[InteractiveMapModal] Current location:', { lat, lng });
          setMarkerPosition({ lat, lng });

          // Center map on current location
          if (mapInstance) {
            mapInstance.panTo({ lat, lng });
            mapInstance.setZoom(15);
          }

          // Reverse geocode current location
          await reverseGeocode(lat, lng);
        },
        (error) => {
          console.error('[InteractiveMapModal] Geolocation error:', error);
          toast.error('Unable to access your location. Please enable location services.');
        },
        {
          enableHighAccuracy: true,
          timeout: 10000,
          maximumAge: 60000
        }
      );
    } else {
      toast.error('Geolocation is not supported by your browser');
    }
  }, [mapInstance, reverseGeocode]);

  // Confirm location selection
  const handleConfirm = useCallback(async () => {
    if (!markerPosition) {
      toast.error('Please select a location on the map');
      return;
    }

    // If we haven't geocoded yet, do it now
    let locationData;
    if (!selectedAddress) {
      locationData = await reverseGeocode(markerPosition.lat, markerPosition.lng);
    } else {
      locationData = {
        address: selectedAddress,
        latitude: markerPosition.lat,
        longitude: markerPosition.lng
      };
    }

    if (locationData) {
      onLocationSelect(locationData);
      onClose();
    }
  }, [markerPosition, selectedAddress, reverseGeocode, onLocationSelect, onClose]);

  // Handle map load
  const handleMapLoad = useCallback((map: google.maps.Map) => {
    setMapInstance(map);
    console.log('[InteractiveMapModal] Map loaded successfully');
  }, []);

  if (loadError) {
    return (
      <Dialog open={isOpen} onOpenChange={onClose}>
        <DialogContent className="max-w-3xl">
          <DialogHeader>
            <DialogTitle>Map Error</DialogTitle>
            <DialogDescription>
              Failed to load map. Please check your internet connection and try again.
            </DialogDescription>
          </DialogHeader>
          <DialogFooter>
            <Button onClick={onClose} variant="outline">Close</Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    );
  }

  if (!isLoaded) {
    return (
      <Dialog open={isOpen} onOpenChange={onClose}>
        <DialogContent className="max-w-3xl">
          <div className="flex items-center justify-center py-12">
            <Loader2 className="h-8 w-8 animate-spin text-circleTel-orange" />
            <span className="ml-3 text-lg">Loading map...</span>
          </div>
        </DialogContent>
      </Dialog>
    );
  }

  return (
    <Dialog open={isOpen} onOpenChange={onClose}>
      <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto">
        <DialogHeader>
          <DialogTitle className="flex items-center gap-2">
            <MapPin className="h-5 w-5 text-circleTel-orange" />
            {title}
          </DialogTitle>
          <DialogDescription>
            {description}
          </DialogDescription>
        </DialogHeader>

        <div className="space-y-4">
          {/* Current Location Button */}
          <Button
            onClick={handleUseCurrentLocation}
            variant="outline"
            className="w-full"
            disabled={isGeocodingAddress}
          >
            {isGeocodingAddress ? (
              <>
                <Loader2 className="h-4 w-4 animate-spin mr-2" />
                Getting address...
              </>
            ) : (
              <>
                <Navigation className="h-4 w-4 mr-2" />
                Use My Current Location
              </>
            )}
          </Button>

          {/* Google Map */}
          <div className="border-2 border-gray-200 rounded-lg overflow-hidden">
            <GoogleMap
              mapContainerStyle={mapContainerStyle}
              center={markerPosition || defaultCenter}
              zoom={markerPosition ? 15 : 12}
              options={mapOptions}
              onClick={handleMapClick}
              onLoad={handleMapLoad}
            >
              {markerPosition && (
                <Marker
                  position={markerPosition}
                  draggable={true}
                  onDragEnd={handleMarkerDragEnd}
                  animation={google.maps.Animation.DROP}
                  icon={{
                    url: 'http://maps.google.com/mapfiles/ms/icons/red-dot.png',
                    scaledSize: new google.maps.Size(40, 40)
                  }}
                />
              )}
            </GoogleMap>
          </div>

          {/* Selected Address Display */}
          {selectedAddress && (
            <div className="bg-green-50 border border-green-200 rounded-lg p-4">
              <p className="text-sm font-semibold text-green-800 mb-1">Selected Address:</p>
              <p className="text-sm text-green-700">{selectedAddress}</p>
            </div>
          )}

          {/* Instructions */}
          <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <p className="text-sm text-blue-800">
              <strong>How to use:</strong>
            </p>
            <ul className="text-sm text-blue-700 mt-2 space-y-1 list-disc list-inside">
              <li>Click anywhere on the map to place the PIN</li>
              <li>Drag the PIN to adjust your exact location</li>
              <li>Use "My Current Location" for automatic detection</li>
              <li>Click "Confirm Location" when ready</li>
            </ul>
          </div>
        </div>

        <DialogFooter className="gap-2">
          <Button onClick={onClose} variant="outline">
            Cancel
          </Button>
          <Button
            onClick={handleConfirm}
            className="bg-circleTel-orange hover:bg-orange-600"
            disabled={!markerPosition || isGeocodingAddress}
          >
            {isGeocodingAddress ? (
              <>
                <Loader2 className="h-4 w-4 animate-spin mr-2" />
                Processing...
              </>
            ) : (
              <>
                <MapPin className="h-4 w-4 mr-2" />
                Confirm Location
              </>
            )}
          </Button>
        </DialogFooter>
      </DialogContent>
    </Dialog>
  );
}
