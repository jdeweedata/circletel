{
  "id": "hero_simple",
  "type": "SharedSlice",
  "name": "HeroSimple",
  "description": "Simple hero section with heading, subheading, CTA, and background image",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default variation",
      "imageUrl": "",
      "primary": {
        "heading": {
          "type": "Text",
          "config": {
            "label": "Heading",
            "placeholder": "Welcome to CircleTel"
          }
        },
        "subheading": {
          "type": "RichText",
          "config": {
            "label": "Subheading",
            "placeholder": "High-speed internet for your home or business",
            "allowTargetBlank": true,
            "single": "paragraph, strong, em, hyperlink"
          }
        },
        "background_image": {
          "type": "Image",
          "config": {
            "label": "Background Image",
            "constraint": {
              "width": 1920,
              "height": 800
            },
            "thumbnails": []
          }
        },
        "cta_text": {
          "type": "Text",
          "config": {
            "label": "CTA Button Text",
            "placeholder": "Learn More"
          }
        },
        "cta_link": {
          "type": "Link",
          "config": {
            "label": "CTA Button Link",
            "placeholder": "/connectivity",
            "allowTargetBlank": true,
            "select": null
          }
        }
      },
      "items": {}
    }
  ]
