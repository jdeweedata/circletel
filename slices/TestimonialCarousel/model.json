{
  "id": "testimonial_carousel",
  "type": "SharedSlice",
  "name": "TestimonialCarousel",
  "description": "Display customer testimonials in a carousel/grid",
  "variations": [{
    "id": "default",
    "name": "Default",
    "docURL": "...",
    "version": "initial",
    "description": "Default testimonial grid",
    "imageUrl": "",
    "primary": {
      "heading": {"type": "Text", "config": {"label": "Heading", "placeholder": "What Our Customers Say"}},
      "subheading": {"type": "Text", "config": {"label": "Subheading", "placeholder": "Trusted by thousands"}}
    },
    "items": {
      "quote": {"type": "Text", "config": {"label": "Testimonial Quote"}},
      "author_name": {"type": "Text", "config": {"label": "Author Name"}},
      "author_title": {"type": "Text", "config": {"label": "Author Title/Company"}},
      "author_photo": {"type": "Image", "config": {"label": "Author Photo", "constraint": {"width": 96, "height": 96}, "thumbnails": []}},
      "rating": {"type": "Select", "config": {"label": "Rating (stars)", "options": ["5", "4", "3", "2", "1"], "default_value": "5"}}
    }
  }]
}
