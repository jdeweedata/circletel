# Netcash Payment Gateway Configuration
# Copy this file to .env.local and fill in your actual Netcash credentials

# Merchant ID - Your Netcash account identifier
# Example (sandbox): NETCASH_MERCHANT_ID=52340889417
NETCASH_MERCHANT_ID=your_merchant_id_here

# Webhook Secret - For verifying webhook signatures
# Example: NETCASH_WEBHOOK_SECRET=6148290802cdc682c39e4a76b4effddc56ed431d25257d8bc692f05b698bea74
NETCASH_WEBHOOK_SECRET=your_webhook_secret_here

# Payment Gateway URLs
# Sandbox URL (for testing)
NETCASH_PAYMENT_URL=https://sandbox.netcash.co.za/paynow/process
# Production URL (uncomment for live)
# NETCASH_PAYMENT_URL=https://paynow.netcash.co.za/paynow/process

# Callback/Webhook URLs
# These must be publicly accessible URLs that Netcash can call
# Use ngrok or similar for local development
NEXT_PUBLIC_BASE_URL=https://your-domain.com
NETCASH_RETURN_URL=${NEXT_PUBLIC_BASE_URL}/payments/return
NETCASH_NOTIFY_URL=${NEXT_PUBLIC_BASE_URL}/api/payments/callback

# Payment Configuration
NETCASH_CURRENCY=ZAR
NETCASH_COUNTRY=ZA

# Security
# Secret key for validating webhook signatures (if supported by Netcash)
NETCASH_WEBHOOK_SECRET=your_webhook_secret_here

# Environment
NODE_ENV=production
# Set to 'development' for testing with Netcash test environment
