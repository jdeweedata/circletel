{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "no-console": ["warn", {
      "allow": ["warn", "error"]
    }],
    "@typescript-eslint/no-explicit-any": "warn",
    "complexity": ["warn", 15],
    "max-lines-per-function": ["warn", { "max": 100, "skipBlankLines": true, "skipComments": true }],
    "max-params": ["warn", 5]
  },
  "overrides": [
    {
      "files": ["scripts/**/*", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts"],
      "rules": {
        "no-console": "off",
        "max-lines-per-function": "off"
      }
    }
  ]
}
