{
  "id": "service_grid",
  "type": "SharedSlice",
  "name": "ServiceGrid",
  "description": "Display services in a grid with icons and descriptions",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default 3-column service grid",
      "imageUrl": "",
      "primary": {
        "heading": {
          "type": "Text",
          "config": {
            "label": "Heading",
            "placeholder": "Our Services"
          }
        },
        "subheading": {
          "type": "Text",
          "config": {
            "label": "Subheading",
            "placeholder": "Everything you need to stay connected"
          }
        }
      },
      "items": {
        "icon": {
          "type": "Image",
          "config": {
            "label": "Service Icon",
            "constraint": {
              "width": 64,
              "height": 64
            },
            "thumbnails": []
          }
        },
        "title": {
          "type": "Text",
          "config": {
            "label": "Service Title",
            "placeholder": "Internet Connectivity"
          }
        },
        "description": {
          "type": "RichText",
          "config": {
            "label": "Service Description",
            "placeholder": "High-speed fibre and wireless internet for homes and businesses",
            "allowTargetBlank": false,
            "single": "paragraph, strong, em"
          }
        },
        "link": {
          "type": "Link",
          "config": {
            "label": "Service Link",
            "placeholder": "/connectivity",
            "select": null
          }
        },
        "link_text": {
          "type": "Text",
          "config": {
            "label": "Link Text",
            "placeholder": "Learn More"
          }
        }
      }
    }
  ]
}
