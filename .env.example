# Google Gemini AI Configuration (for content generation)
# Sign up at: https://ai.google.dev/
# Model: gemini-3-pro-preview (1M context, 64k output, Jan 2025 knowledge cutoff)
GOOGLE_AI_API_KEY=your_gemini_api_key_here
GOOGLE_AI_PROJECT_ID=your_gcp_project_id

# AI Content Generation Settings
CMS_MODEL_ID=gemini-3-pro-preview  # Gemini 3 model ID
CMS_API_VERSION=v1alpha  # Required for media_resolution parameter
CMS_MAX_GENERATIONS_PER_HOUR=20  # Rate limit per user
CMS_DEFAULT_TEMPERATURE=1.0  # CRITICAL: Keep at 1.0 for Gemini 3 (don't change!)
CMS_MAX_TOKENS_BLOG=4096  # Max tokens for blog posts
CMS_MAX_TOKENS_LANDING=2048  # Max tokens for landing pages
CMS_THINKING_LEVEL=high  # Reasoning depth: "low" (fast) or "high" (quality)
CMS_MEDIA_RESOLUTION=media_resolution_high  # Image quality: low/medium/high

# AI Image Generation (Optional - using Gemini multimodal)
# For production, consider integrating DALL-E or Midjourney
ENABLE_AI_IMAGE_GENERATION=false  # Set to true when image API configured

# CMS Storage Configuration
CMS_STORAGE_BUCKET=cms-media  # Supabase storage bucket
CMS_MAX_FILE_SIZE=10485760  # 10MB max upload size
CMS_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif

# CMS Feature Flags
ENABLE_AI_CONTENT_GENERATION=true  # Enable AI content generation
ENABLE_BLOCK_EDITOR=true  # Enable drag-drop block editor
ENABLE_SCHEDULED_PUBLISHING=true  # Enable content scheduling
ENABLE_VERSION_HISTORY=true  # Enable content version tracking
ENABLE_SEO_ANALYSIS=true  # Enable real-time SEO analysis

