{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion",
    "description": "Marketing promotions and deals"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "description": {
      "type": "richtext"
    },
    "category": {
      "type": "enumeration",
      "enum": ["fibre", "wireless", "voip", "hosting", "devices", "mobile", "other"],
      "required": true
    },
    "badge": {
      "type": "string",
      "maxLength": 50
    },
    "price": {
      "type": "decimal"
    },
    "originalPrice": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "ZAR"
    },
    "ctaText": {
      "type": "string",
      "default": "Get this deal"
    },
    "ctaLink": {
      "type": "string"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "backgroundColor": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "textColor": {
      "type": "string",
      "default": "#000000"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    }
  }
}